{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Techred",
  "identifier": "ru.techred",
  "build": {
    "beforeDevCommand": "npm run dev -- --mode tauri",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build -- --mode tauri",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Новый - Техред",
        "width": 800,
        "height": 600,
        "visible": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "copyright": "GNU General Public License v3.0",
    "windows": {
      "nsis": {
        "languages": ["Russian"]
      }
    },
    "fileAssociations": [
      {
        "description": "FictionBook",
        "ext": ["fb2", "fbz", "fb2.zip"],
        "mimeType": "text/xml"
      }
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": ["nsis", "deb", "rpm", "app", "dmg"]
  }
}